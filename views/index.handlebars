<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <h1>Feed Me Burgers!</h1>
        </div>
        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each burger_data}}
                    {{#unless this.devoured}}
                <div class="col-xs-9 text-center">
                    <pre>{{this.id}}. {{this.burger_name}}</pre>
                </div>
            <div class="col-xs-3 text-center">
                <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                <br>
                <button type="submit" class="btn btn-default">DEVOUR ME!</button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
            </div>
        </div>

        <div class"col-xs-6 text-center" class="task">
            {{#each burger_data}}
                {{#if this.devoured}}
                    <input type="text" class="form-control" placeholder="{{this.id}}. {{this.burger_name}}"
                     readonly>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="containter">
    <div class="row">
        <div class="col-xs-12 text-center enter_selection">
        <form action="/burgers/create" method="POST">
            <input type="text" name="burger_name" class="form-control" id="enter-text" value="">
            <button class="btn btn-primary" type="submit" id="text-enter-button">Submit</button>
        </form>
        <p>Build your own Burger!</p>
        </div>
    </div>
</div>